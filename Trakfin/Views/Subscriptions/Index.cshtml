@model Trakfin.Models.SubscriptionViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Subscriptions" asp-action="Index" method="get">
    <p>

        Name: <input asp-for="SearchString" type="text" name="SearchString" />

        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].BillingCycle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].NextBillingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].CancellationPolicy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].Provider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subscriptions![0].Discount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Subscriptions!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillingCycle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextBillingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CancellationPolicy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provider)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
