            </div>
            <div class="form-group">
                <label asp-for="Recurring" class="control-label"></label>
                <select asp-for="Recurring" class="form-control" id="recurringSelect" asp-items="@Html.GetEnumSelectList<ExpenseRecurring>()">
                    <option disabled selected>--- SELECT ---</option>
                </select>
                <span asp-validation-for="Recurring" class="text-danger"></span>
                <button class="btn" type="button" onclick="resetSelectElement('recurringSelect')">Reset</button>
